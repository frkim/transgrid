@page
@model IndexModel
@{
    ViewData["Title"] = "Home - Transgrid Mock Server";
}

<div class="hero-section text-center py-5">
    <div class="container">
        <h1 class="display-3 fw-bold gradient-text mb-4">
            <i class="bi bi-grid-3x3-gap-fill"></i> Transgrid Mock Server
        </h1>
        <p class="lead mb-4">Simulating Integration Services for Starline International</p>
        <p class="text-muted">A comprehensive mock server for OpsAPI, Salesforce, and Network Rail API integrations</p>
    </div>
</div>

<div class="container mt-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-lg hover-card h-100">
                <div class="card-body text-center p-4">
                    <div class="icon-circle mx-auto mb-3 bg-primary">
                        <i class="bi bi-train-front fs-1 text-white"></i>
                    </div>
                    <h3 class="card-title">OpsAPI</h3>
                    <p class="card-text text-muted">Train operational plans with service codes, pathways, and travel dates for RNE export integration.</p>
                    <a href="/OpsApi" class="btn btn-primary btn-lg mt-3">
                        <i class="bi bi-box-arrow-right"></i> View Data
                    </a>
                    <div class="mt-3">
                        <span class="badge bg-info" id="opsapi-count">Loading...</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg hover-card h-100">
                <div class="card-body text-center p-4">
                    <div class="icon-circle mx-auto mb-3 bg-success">
                        <i class="bi bi-briefcase fs-1 text-white"></i>
                    </div>
                    <h3 class="card-title">Salesforce</h3>
                    <p class="card-text text-muted">Negotiated rates data with account information, tariff codes, and distributor codes for CSV exports.</p>
                    <a href="/Salesforce" class="btn btn-success btn-lg mt-3">
                        <i class="bi bi-box-arrow-right"></i> View Data
                    </a>
                    <div class="mt-3">
                        <span class="badge bg-info" id="salesforce-count">Loading...</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg hover-card h-100">
                <div class="card-body text-center p-4">
                    <div class="icon-circle mx-auto mb-3 bg-warning">
                        <i class="bi bi-diagram-3 fs-1 text-white"></i>
                    </div>
                    <h3 class="card-title">Network Rail</h3>
                    <p class="card-text text-muted">CIF schedule files with train service information and passage points for infrastructure pathway events.</p>
                    <a href="/NetworkRail" class="btn btn-warning btn-lg mt-3">
                        <i class="bi bi-box-arrow-right"></i> View Data
                    </a>
                    <div class="mt-3">
                        <span class="badge bg-info" id="networkrail-count">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient text-white">
                    <h4 class="mb-0"><i class="bi bi-info-circle"></i> About This Mock Server</h4>
                </div>
                <div class="card-body">
                    <p>This mock server simulates three integration endpoints for the Transgrid platform, designed for Starline International train operations:</p>
                    <ul>
                        <li><strong>OpsAPI:</strong> Provides train operational plans for export to Rail Network Europe (RNE)</li>
                        <li><strong>Salesforce:</strong> Manages negotiated rates with various extract types (IDL/S3, GDS Air, BeNe)</li>
                        <li><strong>Network Rail:</strong> Processes CIF schedule files from Network Rail NTROD API</li>
                    </ul>
                    <p class="mb-0">All data is stored in memory and can be regenerated or reset at any time using the buttons in the navigation bar.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    async function loadCounts() {
        try {
            const opsResponse = await fetch('/api/OpsApi');
            const opsData = await opsResponse.json();
            document.getElementById('opsapi-count').textContent = `${opsData.length} records`;
            
            const sfResponse = await fetch('/api/Salesforce');
            const sfData = await sfResponse.json();
            document.getElementById('salesforce-count').textContent = `${sfData.length} records`;
            
            const nrResponse = await fetch('/api/NetworkRail');
            const nrData = await nrResponse.json();
            document.getElementById('networkrail-count').textContent = `${nrData.length} records`;
        } catch (error) {
            console.error('Error loading counts:', error);
        }
    }
    
    loadCounts();
</script>
}
