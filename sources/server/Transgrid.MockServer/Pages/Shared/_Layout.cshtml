@{
    ViewData["Title"] = ViewData["Title"] ?? "Transgrid Mock Server";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-gradient sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-grid-3x3-gap-fill"></i> Transgrid Mock Server
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house-door"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/OpsApi">
                            <i class="bi bi-train-front"></i> OpsAPI
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Salesforce">
                            <i class="bi bi-briefcase"></i> Salesforce
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/NetworkRail">
                            <i class="bi bi-diagram-3"></i> Network Rail
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/RneExport">
                            <i class="bi bi-cloud-upload"></i> RNE Export
                        </a>
                    </li>
                </ul>
                <div class="d-flex gap-2 align-items-center">
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-info btn-sm" onclick="updateData()">
                            <i class="bi bi-arrow-repeat"></i> Update Data
                        </button>
                        <button type="button" class="btn btn-outline-info btn-sm dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><h6 class="dropdown-header">Update Period</h6></li>
                            <li><a class="dropdown-item" href="#" onclick="setPeriodAndUpdate(1)">1 minute</a></li>
                            <li><a class="dropdown-item active" href="#" onclick="setPeriodAndUpdate(10)">10 minutes (default)</a></li>
                            <li><a class="dropdown-item" href="#" onclick="setPeriodAndUpdate(60)">1 hour</a></li>
                            <li><a class="dropdown-item" href="#" onclick="setPeriodAndUpdate(240)">4 hours</a></li>
                        </ul>
                        <select id="updatePeriodSelect" class="d-none">
                            <option value="1">1m</option>
                            <option value="10" selected>10m</option>
                            <option value="60">1h</option>
                            <option value="240">4h</option>
                        </select>
                    </div>
                    <button class="btn btn-outline-light btn-sm" onclick="generateNewData()">
                        <i class="bi bi-arrow-clockwise"></i> Generate New Data
                    </button>
                    <button class="btn btn-outline-warning btn-sm" onclick="resetData()">
                        <i class="bi bi-arrow-counterclockwise"></i> Reset Data
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <main class="container-fluid py-4">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">Transgrid Mock Server &copy; 2026 - Starline International</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
