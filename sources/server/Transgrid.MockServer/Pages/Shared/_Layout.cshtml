@{
    ViewData["Title"] = ViewData["Title"] ?? "TransGrid";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-gradient sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-grid-3x3-gap-fill"></i> TransGrid
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house-door"></i> Home
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-diagram-3"></i> Workflows
                        </a>
                        <ul class="dropdown-menu">
                            <li><h6 class="dropdown-header">Integration Use Cases</h6></li>
                            <li>
                                <a class="dropdown-item" href="/RneExport">
                                    <span class="badge uc1-nav-badge me-2">UC1</span> RNE Export
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Salesforce">
                                    <span class="badge uc2-nav-badge me-2">UC2</span> SF Negotiated Rates
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/NetworkRail">
                                    <span class="badge uc3-nav-badge me-2">UC3</span> Network Rail CIF
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-database"></i> Mock Data
                        </a>
                        <ul class="dropdown-menu">
                            <li><h6 class="dropdown-header">Source Systems</h6></li>
                            <li>
                                <a class="dropdown-item" href="/OpsApi">
                                    <i class="bi bi-train-front text-primary me-2"></i> OpsAPI
                                    <small class="text-muted ms-1">(UC1)</small>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Salesforce">
                                    <i class="bi bi-briefcase text-success me-2"></i> Salesforce
                                    <small class="text-muted ms-1">(UC2)</small>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/NetworkRail">
                                    <i class="bi bi-diagram-3 text-warning me-2"></i> Network Rail
                                    <small class="text-muted ms-1">(UC3)</small>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <div class="d-flex gap-2 align-items-center">
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-info btn-sm" onclick="updateData()">
                            <i class="bi bi-arrow-repeat"></i> Update Data
                        </button>
                        <button type="button" class="btn btn-outline-info btn-sm dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><h6 class="dropdown-header">Update Period</h6></li>
                            <li><a class="dropdown-item" href="#" onclick="setPeriodAndUpdate(1)">1 minute</a></li>
                            <li><a class="dropdown-item active" href="#" onclick="setPeriodAndUpdate(10)">10 minutes (default)</a></li>
                            <li><a class="dropdown-item" href="#" onclick="setPeriodAndUpdate(60)">1 hour</a></li>
                            <li><a class="dropdown-item" href="#" onclick="setPeriodAndUpdate(240)">4 hours</a></li>
                            <li><a class="dropdown-item" href="#" onclick="setPeriodAndUpdate(720)">12 hours</a></li>
                            <li><a class="dropdown-item" href="#" onclick="setPeriodAndUpdate(1440)">1 day</a></li>
                            <li><a class="dropdown-item" href="#" onclick="setPeriodAndUpdate(2880)">2 days</a></li>
                        </ul>
                        <select id="updatePeriodSelect" class="d-none">
                            <option value="1">1m</option>
                            <option value="10" selected>10m</option>
                            <option value="60">1h</option>
                            <option value="240">4h</option>
                            <option value="720">12h</option>
                            <option value="1440">1d</option>
                            <option value="2880">2d</option>
                        </select>
                    </div>
                    <button class="btn btn-outline-light btn-sm" onclick="generateNewData()">
                        <i class="bi bi-arrow-clockwise"></i> Generate New Data
                    </button>
                    <button class="btn btn-outline-warning btn-sm" onclick="resetData()">
                        <i class="bi bi-arrow-counterclockwise"></i> Reset Data
                    </button>
                    <!-- Hamburger Menu for Developer Tools -->
                    <div class="dropdown">
                        <button class="btn btn-outline-light btn-sm" type="button" id="devToolsMenu" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-list"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="devToolsMenu">
                            <li><h6 class="dropdown-header"><i class="bi bi-book"></i> Resources</h6></li>
                            <li>
                                <a class="dropdown-item" href="/Documentation">
                                    <i class="bi bi-file-earmark-text text-primary"></i> Documentation
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li><h6 class="dropdown-header"><i class="bi bi-gear"></i> Developer Tools</h6></li>
                            <li>
                                <a class="dropdown-item" href="/FunctionDebug">
                                    <i class="bi bi-bug text-warning"></i> Azure Functions Debug Console
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <main class="container-fluid py-4">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">TransGrid &copy; 2026 - Starline International</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
